terraform {
  required_providers {
    digitalocean = {
      source = "digitalocean/digitalocean"
      version = "~> 2.0"
    }
  }
}

variable "do_token" {}
variable "pvt_key" {}

provider "digitalocean" {
  token = var.do_token
}

data "digitalocean_ssh_key" "<YOUR_SSH_KEY_NAME_IN_DO_PROFILE>" {
  name = "<YOUR_SSH_KEY_NAME_IN_DO_PROFILE>"
}
