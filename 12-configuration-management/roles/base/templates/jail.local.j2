# Fail2Ban configuration file
# Generated by Ansible

[DEFAULT]
ignoreip = {{ fail2ban_ignore_ip }}
bantime = {{ fail2ban_ban_time }}
findtime = {{ fail2ban_find_time }}
maxretry = {{ fail2ban_max_retry }}

[sshd]
enabled = true
port = {{ server_ssh_port }}
logpath = /var/log/auth.log
maxretry = {{ fail2ban_max_retry }}

[sshd-ddos]
enabled = true
port = {{ server_ssh_port }}
logpath = /var/log/auth.log
maxretry = 2
